@model CPWebApp.Models.SOLICITACOES

@{
    ViewBag.Title = "Criar novo - SOLICITACOES";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="row mt-4 align-items-center">
        <div class="col-2">
            <a href="@Url.Action("Index")" class="text-dark"><i class="material-icons" style="font-size: 36px;">arrow_back</i></a>
        </div>
        <div class="col-8 text-center">
            <h2>SOLICITACOES - Criar novo</h2>
        </div>
        <div class="col-2 text-right d-none d-lg-block">
            <button id="submit" type="submit" class="btn btn-success">Salvar</button>
        </div>
        <div class="col-2 text-right d-lg-none">
            <div onclick="$('#submit').click()" class="text-success"><i class="material-icons" style="font-size: 36px;">add</i></div>
        </div>
    </div>
    <hr class="mt-1 mb-3" />
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.sistema, "sistema", htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.DropDownList("sistema", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sistema, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.solicitante, "solicitante", htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.DropDownList("solicitante", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.solicitante, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.aprovador, "aprovador", htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.DropDownList("aprovador", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.aprovador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.criado_em, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.criado_em, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.criado_em, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.aprovado_em, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.aprovado_em, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.aprovado_em, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
